{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "es2017",
      "DOM"
    ],
    "noEmitHelpers": true,
    "importHelpers": true,
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  }
}